<Window x:Class="ImageServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageServiceApp"
        mc:Ignorable="d"
        d:DesignHeight="300" d:DesignWidth="300"
        Title="Main App" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="477*"/>
        </Grid.ColumnDefinitions>
        <TabControl TabStripPlacement="Top" VerticalAlignment= "Stretch" Grid.ColumnSpan="2">
            <TabItem Header="Settings" Height="Auto">
                <local:SettingsWin/>
            </TabItem>

        </TabControl>

    </Grid>
</Window>
